<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- webpt-test-environment.xml -->

<!-- Used for configuration of test environment -->

<webpt-test-environment>


    <webpt>


        <customapplicationconfig>

            <testdata-folder>testData/</testdata-folder>

        </customapplicationconfig>


        <web>


            <base-url>

                <google>https://www.google.com/</google>
                <bing>https://www.bing.com/</bing>

            </base-url>

        </web>


        <desired-capabilities>

            <unexpected-alert-behaviour>accept</unexpected-alert-behaviour>

            <browser-name>chrome</browser-name>

            <browser-version>65</browser-version>

            <browser-download-path>/chromeDriver/chrome237/chromedriver</browser-download-path>

            <platform/>

            <takes-screenshot>true</takes-screenshot>

            <!-- Using Saucelabs -->

            <grid-use>false</grid-use>

            <grid-url>http://company:accesskey@ondemand.saucelabs.com:80/wd/hub</grid-url>

            <grid-selenium-protocol>http://10.0.0.171:4444/wd/hub</grid-selenium-protocol>

            <grid-max-instances/>

            <chrome>

                <proxy/>


                -
                <chrome-options>

                    <args/>

                    <binary/>

                    <extensions/>

                </chrome-options>

            </chrome>


            -
            <firefox>


                <logging-prefs/>

                <binary/>

                <rc-mode/>

                <rc-capture-network-traffic/>

                <rc-add-custom-request-header/>

                <rc-trust-all-ssl-cert/>

                <webdriver-accept-untrusted-certs/>

                <webdriver-assume-untrusted-issuer/>

                <webdriver-log-driver/>

                <webdriver-log-file/>

                <webdriver-log-file/>

                <webdriver-load-strategy/>

                <webdriver-port/>

            </firefox>


            -
            <ie>

                <ignore-protected-mode-settings/>

                <ignore-zoom-setting/>

                <initial-browser-url/>

                <enable-persistent-hover/>

                <enable-element-cache-cleanup/>

                <require-window-focus/>

                <browser-attach-timeout/>

                <force-create-process-api/>

                <browser-cmd-line-switches/>

                <use-per-process-proxy/>

                <ensure-clean-session/>

                <log-file/>

                <log-level/>

                <host/>

                <extract-path/>

                <silent/>

                <set-proxy-by-server/>

                <rc-mode/>

                <rc-kill-processes-by-name/>

                <rc-honor-system-proxy/>

                <rc-ensure-clean-session/>

            </ie>


            -
            <safari>

                <use-options/>

                <port/>

                <use-clean-session/>

                <rc-mode/>

                <rc-honor-system-proxy/>

            </safari>

        </desired-capabilities>


        -
        <reporting>

            <!-- report file locations, switches to turn different reporting on\off -->


            <use-jserrorcollector-with-firefox>false</use-jserrorcollector-with-firefox>

            <buffered-image-save-location></buffered-image-save-location>

            <buffered-image-save-format>PNG</buffered-image-save-format>

            <takes-screenshot-save-location></takes-screenshot-save-location>

        </reporting>


        -
        <databases>


            -
            <database>

                <!-- primary datasource -->


                <db-key>PRIMARY</db-key>

                <db-driver>mongodb.jdbc.MongoDriver</db-driver>

                <db-user/>

                <db-password/>

                <db-url>mongodb://localhost:27017/nameofdb</db-url>

            </database>


            -
            <database>

                <db-key>H2-SECONDARY</db-key>

                <db-driver>org.h2.Driver</db-driver>

                <db-user>sa</db-user>

                <db-password/>

                <db-url>jdbc:h2:tcp://192.168.1.49:9123/mem:devDb</db-url>

            </database>

        </databases>


        -
        <other>


            -
            <image-library>

                <windows>${resource-path}/${app-path}/image</windows>

                <linux>${resource-path}/${app-path}/image</linux>

                <macosx>${resource-path}/${app-path}/image</macosx>

            </image-library>

        </other>

    </webpt>

</webpt-test-environment>