<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- web-driver-config.xml -->

<!-- Used for configuration of test environment -->

<config>

    <unexpected-alert-behaviour>accept</unexpected-alert-behaviour>

    <browser-name>chrome</browser-name>

    <browser-version/>

    <browser-download-path/>

    <platform/>

    <takes-screenshot>true</takes-screenshot>

    <!-- Using Saucelabs -->

    <grid-use>false</grid-use>

    <grid-url>http://company:accesskey@ondemand.saucelabs.com:80/wd/hub</grid-url>

    <grid-selenium-protocol>http://10.0.0.171:4444/wd/hub</grid-selenium-protocol>

    <grid-max-instances/>

    <chrome>

        <proxy/>


        <args>
            --disable-notifications,
            --test-type chrome.switches,
            --disable-extensions,
            --disable-popup-blocking,
            --use-fake-ui-for-media-stream
        </args>

        <binary/>

        <extensions/>

        <headless>false</headless>

    </chrome>


    -
    <firefox>

        <logging-prefs/>

        <binary/>

        <rc-mode/>

        <rc-capture-network-traffic/>

        <rc-add-custom-request-header/>

        <rc-trust-all-ssl-cert/>

        <webdriver-accept-untrusted-certs/>

        <webdriver-assume-untrusted-issuer/>

        <webdriver-log-driver/>

        <webdriver-log-file/>

        <webdriver-log-file/>

        <webdriver-load-strategy/>

        <webdriver-port/>

    </firefox>


    -
    <ie>

        <ignore-protected-mode-settings/>

        <ignore-zoom-setting/>

        <initial-browser-url/>

        <enable-persistent-hover/>

        <enable-element-cache-cleanup/>

        <require-window-focus/>

        <browser-attach-timeout/>

        <force-create-process-api/>

        <browser-cmd-line-switches/>

        <use-per-process-proxy/>

        <ensure-clean-session/>

        <log-file/>

        <log-level/>

        <host/>

        <extract-path/>

        <silent/>

        <set-proxy-by-server/>

        <rc-mode/>

        <rc-kill-processes-by-name/>

        <rc-honor-system-proxy/>

        <rc-ensure-clean-session/>

    </ie>


    -
    <safari>

        <use-options/>

        <port/>

        <use-clean-session/>

        <rc-mode/>

        <rc-honor-system-proxy/>

    </safari>

    <reporting>

        <!-- report file locations, switches to turn different reporting on\off -->


        <use-jserrorcollector-with-firefox>false</use-jserrorcollector-with-firefox>

        <buffered-image-save-location/>

        <buffered-image-save-format>PNG</buffered-image-save-format>

        <takes-screenshot-save-location/>

    </reporting>

    -
    <other>

        -
        <image-library>

            <windows>${resource-path}/${app-path}/image</windows>

            <linux>${resource-path}/${app-path}/image</linux>

            <macosx>${resource-path}/${app-path}/image</macosx>

        </image-library>

    </other>

</config>